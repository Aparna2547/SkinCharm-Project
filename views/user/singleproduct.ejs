 <!-- Related Section Begin -->
 <section class="related spad mt-5">
    
    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                  
                        <h3 class="related-title">Related Product</h3>
                </div>
            </div>       
                <div class="row">
                            
                    <% similarProduct.forEach((simPrdt)=>{ %> 
                                <div class="col-lg-4 col-md-6 col-sm-6">
                                    <div class="product__item p-2" style="background-color: white;min-height: 22rem;">
                                        <div class="product__item__pic set-bg" data-setbg="img/product/product-2.jpg">
                                            <ul class="product__hover">
                                                <li><a href="/singleProductpage?id=<%=simPrdt.id %>"><img
                                                            class="img-fluid"
                                                            src="/images/<%= simPrdt.image[0]?.filename %>"
                                                            alt="image"></a></li>
                                            </ul>
                                        </div>
                                        <div class="product__item__text  mt-5 mt-lg-0">
                                            <h6>
                                                <%= simPrdt.productname %>
                                            </h6>
                                            
                                            <p class="my-2 fs-7  fw-bold"><strike class="text-muted">₹
                                                    <%=simPrdt.actualPrice %>
                                                </strike> ₹<%= simPrdt.sellingPrice %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        

        </div>
    </section>
    <!-- Product Section End -->

</section>
