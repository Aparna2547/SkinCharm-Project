<%- include("./head.ejs") -%>

    <%- include("./header.ejs") -%>



    <!-- Hero Section Begin -->
    <section class="hero">
        <div id="carouselExampleControls" class="carousel slide h-4" data-ride="carousel">
            <div class="carousel-inner">
                <% if (banner && banner.images) {
                    banner.images.forEach((image, index) => { %>
                        <div class="carousel-item<%= index === 0 ? ' active' : '' %>">
                            <img class="img-fluid" src="/images/<%= image.filename %>" alt="">
                        </div>
                    <% });
                } %>
            </div>
        
            </div>
        </div>


    </section>
 <!-- Hero Section End -->

        <!-- Banner Section Begin -->
        <section class="banner spad mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 offset-lg-4">
                        <div class="banner__item">
                            <div class="banner__item__pic">
                                <img src="/images/dot&keyfaceserum2.avif" alt="" class="img-fluid">
                            </div>
                            <div class="banner__item__text">
                                <h2>New Collections</h2>
                                <a href="/shop">Shop now</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="banner__item banner__item--middle">
                            <div class="banner__item__pic">
                                <img src="/images/mamaearthmoisturizer1.webp" alt="">
                            </div>
                            <div class="banner__item__text">
                                <h2>New Collections</h2>
                                <a href="/shop">Shop now</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="banner__item banner__item--last">
                            <div class="banner__item__pic">
                                <img src="/images/lakmetoner1.avif" alt="">
                            </div>
                            <div class="banner__item__text">
                                <h2>New Collections</h2>
                                <a href="/shop">Shop now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    <!-- Banner Section End -->


    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li  class="active">New Arrivals</li>
                    </ul>
                </div>
            </div>       
                <div class="row">
                            
                            <% product.forEach((product)=>{ %>
                                <div class="col-lg-4 col-md-6 col-sm-6">
                                    <div class="product__item p-2" style="background-color: white;min-height: 22rem;">
                                        <div class="product__item__pic set-bg" data-setbg="img/product/product-2.jpg">
                                            <ul class="product__hover">
                                                <li><a href="/singleProductpage?id=<%=product.id %>"><img
                                                            class="img-fluid"
                                                            src="/images/<%= product.image[0]?.filename %>"
                                                            alt="image"></a></li>
                                            </ul>
                                        </div>
                                        <div class="product__item__text  mt-5 mt-lg-0">
                                            <h6>
                                                <%= product.productname %>
                                            </h6>
                                            
                                            <p class="my-2 fs-7  fw-bold"><strike class="text-muted">₹
                                                    <%=product.actualPrice %>
                                                </strike> ₹<%= product.sellingPrice %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        

        </div>
    </section>
    <!-- Product Section End -->

    

        <%- include("./footer.ejs") -%>