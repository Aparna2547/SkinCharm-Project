<%- include("./head.ejs") -%>
    <%- include("./header.ejs") -%>

        <section>


            <%- include("./profilebar.ejs") -%>
                <div class="card">

                    <div class="card-body" style="min-height: 70vh;">
                        <h4 class="text-center fw-bold my-3">Edit Profile</h4>
                        <div class="form-control ms-4 " style="width: 41rem">
                            <%=data.mobile  %>
                        </div>
                        <form action="/changeProfile" method="post" id="editProfileId">
                            

                            <div class="form-group">
                                <input type="hidden" class="form-control" id="id" name="id" value="<%=data._id%>">
                            </div>

                            <div class="form-group">
                                <input type="text" class="form-control my-1" id="name" name="name"
                                    value="<%= data.username %>">
                            </div>
                            <!-- <div class="form-group">
                                <input type="text" class="form-control my-1" id="mobile" name="mobile"
                                    value="<%=data.mobile%>">
                            </div> -->
                            <div class="form-group">
                                <input type="text" class="form-control my-1" id="email" name="email"
                                    value="<%=data.email%>">
                            </div>

                            <div class="text-center text-danger fw-bold" id="errorMessage"></div>
                            <div class="text-center mt-5">
                                <button type="submit" class="btn btn-block w-100 mx-auto text-white ls"
                                    style="background-color:#c70261;">
                                    Save Details
                                </button>                    
                                <a href="/ChangePasswordpage" class="btn btn-block w-100 mx-auto text-white ls"
                                style="background-color:#c70261;"> Change Password</a>  
                            </form>
                            </div>
                          
                             
             
                    </div>

                </div>

                </div>
                </div>
                </div>
                <!-- </div> -->
        </section>
        
        <script src="/user/js/editProfile.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
            <script src="/user/js/changePassword.js"></script>
        <%- include("./footer.ejs") -%>