
<%- include('./head.ejs') %>

 

<section class="wraper ">
    <div class="text-center container mt-5" id="login">
        <div class="container pt-3 pb-3" id="frm-block">
            <div class="title pb-3">
                <h4 class="fw-bold pt-2">NEW ADDRESS </h4>
            </div>
            <form action="/addAddress" method="POST" id="formId">
                <div class="form-group pt-0">
                    <input type="text" name="name" id="name" placeholder="Name" class="form-control" >
                </div>
                <div class="form-group pt-3">
                    <input type="text" name="phone" id="phone" placeholder="Mobile Number" class="form-control" >
                </div>
                <div class="form-group pt-3">
                    <input type="text" name="address" id="address" placeholder="Address" class="form-control" >
                </div>
                <div class="form-group pt-3">
                    <input type="text" name="locality" id="locality" placeholder="Locality" class="form-control" >
                </div>
                <div class="form-group pt-3">
                    <input type="text" name="pincode" id="pincode" placeholder="Pincode" class="form-control" >
                </div>
                <div class="form-group pt-3">
                    <input type="text" name="city" id="city" placeholder="City" class="form-control" >
                </div>
                <div class="form-group pt-3">
                    <input type="text" name="state" id="state" placeholder="State" class="form-control" >
                </div>
                <div class="form-group pt-3">
                    <p id="errorMessage"></p>             
                   </div>

                <button type="submit" class="btn  mt-3 w-75 fw-bold text-white ls" style="background-color:#c70261;" onclick="addressValidate()" id="submitButton">ADD ADDRESS</button>
            </form>
        </div>
    </div>
</section>

<script src="/user/js/addressvalidate.js"></script>

