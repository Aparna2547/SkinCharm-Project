                                <a class="btn btn-danger btn-sm my-2 w-100" href="/admin/deleteCatImg?image=<%=cat.image%>&id=<%=cat._id%>">Delete</a>
                                </div>
                           <% }else{ %>
                                <input type="file" id="catImage" name="image" class="form-control" />
                          <%  } %>
                            
                        </div>
                        <div id="errorMessage" class="text-center text-danger" ></div>
          
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4 w-100">
