        <!-- MAIN -->
        <main>

            <div class="table-data">
                <div class="order bg-gradient">
                    <div class="p-3 d-flex" style="border: 2px solid grey;">
                        <% if (orderFound) { %>
                         <div class="row">
                            <div class="col-4">
                              <img src="/images/<%= orderFound.product_id.image[0].filename %>" alt="" class="img-fluid">
                            </div>
                            <div class="m-5 col-4">
                              <p class="fw-bold mb-0"><%= orderFound.product_id.productname %></p>
                              <p class="fw-bold mb-0">Quantity: <%= orderFound.count %></p>
                              <p class="fw-bold mb-0">Price: â‚¹<%= orderFound.count * orderFound.price %></p>
                            
                            </div>
                            <%const date = new Date(orderFound.orderDate);%>
                            <%const options = { month: 'short', day: 'numeric', year: 'numeric' };
                            const formattedDate = date.toLocaleDateString('en-US', options); %>
                            <% 
                            var status
                                switch (orderFound.orderStatus) {
                                    case 1:
                                        status = "Confirmed"
                                        break;
                                    case 2:
                                        status = "Shipped"
                                        break;
                                    case 3:
                                        status = "Out for delivery"
                                        break
                                    case 4:
                                        status = "Delivered"
                                        break;
                                    case 5:
                                        status = "Cancelled"
                                        break;
                                    case 6:
                                        status = "Cancelled by admin"
                                    default:
                                        break;
                                }
                            %>
                            </p>
                        </div>
                        <div class="col-4 m-5">
                            <p  class="card-text fw-bold <%=orderFound.orderStatus >4 && 'text-danger'  %>" >  <b class="text-center" style="text-align:center;">  <%= status %> on <%=formattedDate  %></b> </p>
                            <p class="card-text fw-bold"> payment type:<%=orderFound.payment%></p>
                        </div>
                        </div>
                        <% } else { %>
                          <p>No items found in the order.</p>
                        <% } %>
                      </div>
                      
                </div>
            </div>
            </div>
            
            <div class="table-data mt-0">
                <div class="order bg-gradient">
                    <div class="p-3" style="border: 2px solid grey;">
                        <h6>Delivery Address</h6>
                        <% if(orderFound){ %>
                        <div class="row">
                            <div class="mx-0 col-4">               
                                <p class="fw-bold mb-0"><%=orderFound.address.name %></p>
                                <p class="mb-0"><%=orderFound.address.address%>,<%=orderFound.address.locality%>,<%=orderFound.address.city%>,<%=orderFound.address.state%>-<%=orderFound.address.pincode%></p>
                                <p class="fw-bold mb-0"><%=orderFound.address.phone%></p>
                            </div>
                        </div>
                      <% } %>
                    </div>  
                   
                </div>
            </div>
            
