        <section id="content">
            <section class="background-radial-gradient overflow-hidden col-md-12">

                <h2 class="text-center text-secondary mt-5 mb-0">NEW PRODUCT</h2>
                <div class="container px-4 py-5 px-md-5 text-center text-lg-start mt-0 w-75">
                    <div class="row gx-lg-5 align-items-center mb-5">
                        <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                        </div>

                        <div class="col-lg-12 mb-5 mb-lg-0 position-relative w-100">
                            <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                            <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                            <div class="card bg-glass">
                                <div class="card-body px-4 py-5 px-md-5">


                                    <% if(typeof message !=='undefined' ){ %>
                                        <h2>
                                            <%= message %>
                                        </h2>
                                        <% } %>
                                            <form action="/admin/addProduct" method="post" id="formId"
                                                enctype="multipart/form-data">


                                                <!-- product input -->
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="form3Example3">Product</label>
                                                    <input type="text" id="product" name="productname"
                                                        class="form-control" />
                                                </div>

                                                <!-- category input -->
                                                <div class="form-outline mb-4">

                                                    <label class="form-label" for="form3Example3">Category</label>
                                                    <!-- <input type="text" id="category" name="category" class="form-control" /> -->
                                                    <select class="form-control" name="category" id="category">
                                                        <option value="selected" selected>select a category</option>
                                                        <% category.forEach(cat=>{ %>
                                                            <option value="<%=cat._id%>">
                                                                <%=cat.category%>
                                                            </option>
                                                            <%})%>
                                                    </select>
                                                </div>

                                                <!-- brand input -->
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="form3Example3">Brand name</label>
                                                    <select class="form-control" name="brand" id="brand">
                                                        <option value="selected" selected>select a brand</option>
                                                        <% category[0].brands.forEach(brand=>{ %>
                                                            <option value="<%=brand%>">
                                                                <%=brand%>
                                                            </option>
                                                            <%})%>
                                                    </select>
                                                </div>

                                                <!-- actual price input -->
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="form3Example3">Actual Price</label>
                                                    <input type="number" id="actualPrice" name="actualPrice"
                                                        class="form-control" />
                                                </div>

                                                <!-- selling price input -->
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="form3Example3">Selling Price</label>
                                                    <input type="number" id="sellingPrice" name="sellingPrice"
                                                        class="form-control" />
                                                </div>

                                                <!-- Stick input -->
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="form3Example3">Stock</label>
                                                    <input type="number" id="stock" name="stock" class="form-control" />
                                                </div>

                                                <!-- description input -->
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="form3Example3">description</label>
                                                    <textarea name="description" id="description" cols="10" rows="5"
                                                        class="form-control"></textarea>

                                                </div>

                                                <!-- image input -->

                                                <label class="form-label" for="form3Example3">Image</label>
                                                <div class="form-outline mb-4 d-flex">

                                                    <input type="file" id="image1" name="image"
                                                        class="form-control m-2" required/>
                                                    <input type="file" id="image2" name="image"
                                                        class="form-control m-2" required/>
                                                    <input type="file" id="image3" name="image"
                                                        class="form-control m-2" />

                                                </div>


                                                <div id="errorMessage" class="text-center text-danger m-1 fw-bold">
                                                </div>

                                                <!-- Submit button -->
                                                <button type="submit" class="btn btn-primary btn-block mb-4 w-100">
                                                    Add Product
                                                </button>


                                            </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </section>

            <!-- Section: Design Block -->
        </div>
